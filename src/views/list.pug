extends layouts/main
include mixins/resumeBlock

block content
    .list__container
        .list__header 
            h3|프로필 필터링
            form(action=routes.list(recruit.id), method="get")
                if keywords.includes('A')
                    input(type="checkbox", id="keywordA", name="k", value="A" checked)
                else
                    input(type="checkbox", id="keywordA", name="k", value="A")
                span|귀여운
                if keywords.includes('B')
                    input(type="checkbox", id="keywordB", name="k", value="B" checked)
                else 
                    input(type="checkbox", id="keywordB", name="k", value="B")
                if recruit.gender == "Female"
                    span|섹시한
                else
                    span|듬직한
                if keywords.includes('C')
                    input(type="checkbox", id="keywordC", name="k", value="C" checked)
                else
                    input(type="checkbox", id="keywordC", name="k", value="C")
                if recruit.gender == "Female"
                    span|우아한
                else
                    span|섹시한
                if keywords.includes('D')
                    input(type="checkbox", id="keywordD", name="k", value="D" checked)
                else
                    input(type="checkbox", id="keywordD", name="k", value="D")
                if recruit.gender == "Female"
                    span|청순한
                else
                    span|시크한
                if keywords.includes('E')
                    input(type="checkbox", id="keywordE", name="k", value="E" checked)
                else
                    input(type="checkbox", id="keywordE", name="k", value="E")
                if recruit.gender == "Female"
                    span|풋풋한
                else
                    span|터프한
                input(type="submit",value="적용").submitBtn
        .list
            each resume in resumeList
                .resume
                    +resumeBlock({
                        id:resume.id,
                        name:resume.name,
                        keywordA:resume.keywordA,
                        keywordB:resume.keywordB,
                        keywordC:resume.keywordC,
                        keywordD:resume.keywordD,
                        keywordE:resume.keywordE,
                        gender:resume.gender,
                        birth:resume.birth,
                        createdAt: resume.createdAt,
                        image:resume.imgUrlOne,
                        creator:resume.creator,
                    })