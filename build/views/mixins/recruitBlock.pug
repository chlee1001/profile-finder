mixin recruitBlock(recruit = {})
    .recruitBlock
        a(href=routes.recruitDetail(recruit.id))
            .content__wrapper
                h4.recruitBlock__title=recruit.title
                h4.recruitBlock__subtitle
                    span=recruit.part
                    |,
                    span=recruit.gender
                h4.recruitBlock__description=recruit.description
                h4.recruitBlock__deadline
                    span|기한: 
                    span=formatDate(recruit.deadline)
                button|지원하기
                