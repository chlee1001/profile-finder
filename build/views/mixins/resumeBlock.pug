mixin resumeBlock(resume = {})
    .resumeBlock
        a(href=routes.resumeDetail(resume.id)).thumbnail
            img(src=resume.image)
            .resumeBlock__description
                h4.resumeBlock__name=resume.name
                    span=resume.gender == "Female" ? "여" : "남"
                    span|#{resume.birth}년생 (#{new Date().getFullYear()-resume.birth+1})
                .resume__keywords
                    if resume.keywordA > 15
                        .keyword="#귀여운"
                    if resume.keywordB > 15
                        .keyword=resume.gender == "Female" ? "#섹시한" : "#듬직한"
                    if resume.keywordC > 15
                        .keyword=resume.gender == "Female" ? "#우아한" : "#섹시한"
                    if resume.keywordD > 15
                        .keyword=resume.gender == "Female" ? "#청순한" : "#시크한"
                    if resume.keywordE > 15
                        .keyword=resume.gender == "Female" ? "#풋풋한" : "#터프한"
                p.createdAt|#{formatDate(resume.createdAt)}작성
        if resume.creator.name
            a(href=routes.userDetail(resume.creator))
                h6.resumeBlock__creator=resume.creator.name
                