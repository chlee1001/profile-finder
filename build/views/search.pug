extends layouts/main
include mixins/recruitBlock

block content
    .search__wrapper
        .search__header
            h3 '#{searchingBy}' 에 대한 검색결과: #{recruits.length}개
        if recruits.length === 0
            .search__noresult
                h3 결과 없음
        else
            .search__results
                each item in recruits
                    +recruitBlock({
                        id:item.id,
                        title:item.title,
                        part:item.part,
                        gender:item.gender=='Female' ? '여' : '남',
                        deadline:item.deadline,
                        description:item.description,
                        views:item.views,
                    })